pipeline
   {
    agent any
    triggers {
          pollSCM('* * * * *')
     }
    stages
    {

        stage('Git-checkout')
        {
            steps 
            {
               git url:'https://github.com/meghana2607/Calc.git'
               echo"checkout successful";
               }
        }
        stage('Compile') 
        {
            steps 
            {
                sh"./gradlew compileJava"
                echo "Test succesful";
            }
        }
        stage('Build') 
        {
            steps 
            {
                
                sh"./gradlew buid"
                echo "build succesful";
             }
          } 
           stage('Test') 
        {
            steps 
            {
             sh"./gradlew TestJava"
                echo "test succesful";
             }
          }   
       }
 }
